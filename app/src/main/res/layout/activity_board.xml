            android:layout_height="150dp"
            android:textSize="60sp"
            android:background="@drawable/my_board_button"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

