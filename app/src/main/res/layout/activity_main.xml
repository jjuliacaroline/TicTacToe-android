<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.julia.tictactoe.MainActivity"
    android:background="@color/black"

    >

<RelativeLayout
    android:id="@+id/layout1"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_weight="1">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout1"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:id="@+id/relativeLayout">

    </RelativeLayout>

    <Button


        android:id="@+id/highScores"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="129dp"
        android:layout_weight="1"
        android:background="@drawable/my_button"
        android:text="High scores"

        />

    <Button
        android:id="@+id/pvc"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/highScores"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:layout_weight="1"
        android:text="player vs Computer"
        android:background="@drawable/my_button"/>

    <Button
        android:id="@+id/pvp"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="40dp"
        android:layout_above="@+id/pvc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="71dp"
        android:layout_weight="1"
        android:text="Player vs Player"
        android:background="@drawable/my_button"/>

    <TextView
        android:id="@+id/textView"
        android:textSize="19dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="Welcome to the tic tac toe game!"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Choose mode below:"
        android:textColor="@color/white"/>
</RelativeLayout>
